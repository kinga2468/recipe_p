{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.ingredient_delete'|trans({'%id%': ingredient.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.ingredient_delete'|trans({'%id%': ingredient.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('ingredient_delete', {id: ingredient.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('ingredient_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}