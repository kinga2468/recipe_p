{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.ingredient_list'|trans }}
{% endblock %}

{% block body %}
    {% include 'default/_flash_messages.html.twig' %}
    <div class="section_title">
        <h1>{{ 'title.ingredient_list'|trans }}</h1>
    </div>
    {% if ingredients is defined and ingredients|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.IngredietName'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for ingredient in ingredients %}
                <tr>
                    <td>{{ ingredient.id }}</td>
                    <td>{{ ingredient.name }}</td>
                    <td>
                        <a href="{{ url('ingredient_edit', {id: ingredient.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('ingredient_delete', {id: ingredient.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(ingredients) }}
        </div>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}