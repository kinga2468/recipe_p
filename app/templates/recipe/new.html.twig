{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.recipe_new'|trans }}
{% endblock %}

{% block body %}
    <div class="section_title">
        <h1>{{ 'title.recipe_new'|trans }}</h1>
    </div>
    {{ form_start(form, { method: 'POST', action: url('recipe_new') }) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.peopleAmount) }}
    {{ form_row(form.time) }}

    <div class="ingredient_add">
        <p>{{ 'label.ingredient'|trans }}</p>
        <ul class="ingredients" data-prototype="{{ form_widget(form.ingredient.vars.prototype)|e('html_attr') }}">
            {% for ingredient_1 in form.ingredient %}
                <li>{{ form_row(ingredient_1.name) }}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="tag_add">
        {{ form_row(form.photo) }}
        {{ form_row(form.tags) }}
    </div>

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="button" />
    </div>
    {{ form_end(form) }}

    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}