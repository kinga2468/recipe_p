{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.recipe_new'|trans }}
{% endblock %}

{% block body %}
    <div class="section_title">
        <h1>{{ 'title.recipe_new'|trans }}</h1>
    </div>
    {{ form_start(form, { method: 'POST', action: url('recipe_new') }) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.time) }}
    {{ form_row(form.peopleAmount) }}
    {{ form_row(form.photo) }}

    <h3>Ingredients</h3>
    {#<ul class="ingredients" data-prototype="{{ form_widget(form.ingredients.vars.prototype)|e('html_attr') }}">#}
        {#{% for ingredient in form.ingredients %}#}
            {#<li>{{ form_row(ingredient.title) }}</li>#}
        {#{% endfor %}#}
    {#</ul>#}
    {{ form_row(form.tags) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="button" />
    </div>
    {{ form_end(form) }}

    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}