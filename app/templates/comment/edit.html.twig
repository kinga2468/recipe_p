{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.comment_edit'|trans }}
{% endblock %}

{% block body %}
    <div class="section_title">
        <h1>{{ 'title.comment_edit'|trans }}</h1>
    </div>
    {{ form_start(form, { method: 'PUT', action: url('comment_edit', {'id': comment.id, 'recipeId':comment.recipe.id }) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="button" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_view', {'id': comment.recipe.id}) }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}