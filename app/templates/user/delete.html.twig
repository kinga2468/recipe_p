{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_delete'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="section_title">
        <h1>{{ 'title.user_delete'|trans }}{{ user.login }}</h1>
    </div>
    {{ form_start(form, { method: 'DELETE', action: url('user_delete', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="button" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('user_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}